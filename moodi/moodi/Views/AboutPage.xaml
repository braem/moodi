<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="moodi.Views.AboutPage"
             xmlns:local="clr-namespace:moodi.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <local:AboutViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="20,20,20,20" Spacing="10">
                <StackLayout Padding="0,0,0,20">
                    <Label Text="{Binding AppAboutTitle}" FontSize="40"/>
                    <Label Text="moodi is a free and open source software for tracking moods."/>
                </StackLayout>

                <Button Text="Source Code"
                        Command="{Binding OpenGitHubRepo}"/>
                <Button Text="License"
                        Command="{Binding OpenLicense}"/>
                <Button Text="Third Party Libraries"
                        Command="{Binding OpenThirdPartyPage}"/>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
